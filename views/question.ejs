<!DOCTYPE html>
<html lang="zh-CN">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Tisan - 问答分享社区</title>
<link href="/components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="/question/question.css" rel="stylesheet">
</head>
<body>
<div class="container" style="margin-top:20px">
    <div class="row">
        <div class="col-xs-4">
        </div>
    </div>
    <div class="row" style="">
        <div class="col-xs-7 col-xs-offset-1 show-area">
            <div class="question-list-header">
                <a href="/?tab=all" class="topic-tab current-tab">全部</a>
                <a href="/?tab=all" class="topic-tab current-tab">未回答</a>
                <a href="/?tab=all" class="topic-tab current-tab">推荐文章</a>
            </div>
            <div class="question_content">
            </div>
            <div class="splice-page-content">
                <ul class="pagination">
                    <li>
                    <a href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                    </li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li>
                    <a href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-xs-4">
            <%include navigation.ejs%>
            <div class="show-area publish-question-content">
                <button class="btn btn-primary">我要提问</button>
            </div>
        </div>
        <div class="col-xs-1">
        </div>
    </div>
</div>
</body>
<script type="text/template" id="question-list">
<#for(var i in question){#>
    <section class="question_list">
        <div class="left-content">
            <div class="vote"><#=question[i].vote#>
                <small>投票</small>
            </div>
            <div class="answer"><#=question[i].answer#>
                <small>答案</small>
            </div>
            <div class="view"><#=question[i].view#><small>浏览</small>
            </div>
        </div>
        <div class="right-content">
            <div class="author"><span><#=question[i].author#></span> <span>·</span> <span><#=question[i].time#></span>
            </div>
        <div class="title"> <a><#=question[i].titel#><a> </div>
        <!--<div class="label-list">
                <ul> <li>javascript</li> <li>jquery</li> <li>mysql</li> </ul>
            </div>!-->
        </div>
        <div class="last-answer">
            <ul class="list-unstyled">
                <li>
                    <img height=35; width=35; src="<#=question[i].avatar#>">
                </li>
            </ul>
        </div>
    </section>
<#}#>
</script>
<script src="/components/jquery/dist/jquery.min.js"></script>
<script src="/components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/components/underscore/underscore.js"></script>
<script src="/question/question.js"></script>
</html>
